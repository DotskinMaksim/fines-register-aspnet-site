@model FinesRegister.Models.AddPaymentMethodViewModel

@{
    ViewBag.Title = "Lisa maksemeetod";
}

<div class="container mt-4">
    <h2>Lisa maksemeetod</h2>

    @if (!ViewData.ModelState.IsValid)
    {
    <div class="text-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
        <div>@error.ErrorMessage</div>
        }
    </div>
    }

    <form asp-action="AddPaymentMethod" method="post">
        <div class="form-group">
            <label asp-for="OwnerName" class="control-label">Omaniku nimi:</label>
            <input asp-for="OwnerName" class="form-control" required />
            <span asp-validation-for="OwnerName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CardNumber" class="control-label">Kaardi number:</label>
            <input asp-for="CardNumber" class="form-control" required />
            <span asp-validation-for="CardNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Aegumiskuup√§ev (kuu/aasta):</label>
            <div class="row">
                <div class="col">
                    <input asp-for="ExpirationMonth" class="form-control" type="number" placeholder="MM" required min="1" max="12" />
                    <span asp-validation-for="ExpirationMonth" class="text-danger"></span>
                </div>
                <div class="col">
                    <input asp-for="ExpirationYear" class="form-control" type="number" placeholder="AA" required min="@DateTime.Now.Year" />
                    <span asp-validation-for="ExpirationYear" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CvvCode" class="control-label">CVV kood:</label>
            <input asp-for="CvvCode" class="form-control" required />
            <span asp-validation-for="CvvCode" class="text-danger"></span>
        </div>
        <br>
        <div class="form-group">
            <input type="submit" value="Lisa" class="btn btn-primary" />
        </div>
    </form>

    <div class="mt-3">
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Tagasi</a>
    </div>
</div>

<style>
    .container {
        max-width: 600px;
    }
</style>