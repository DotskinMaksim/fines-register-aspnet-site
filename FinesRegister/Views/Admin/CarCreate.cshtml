@model FinesRegister.Models.CarCreateViewModel

<h2>Lisa auto</h2>

@if (!ViewData.ModelState.IsValid)
{
    foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
    {
    <div class="text-danger">@error.ErrorMessage</div>
    }
}

<form asp-action="CarCreate">
    <div class="form-group">
        <input asp-for="Number" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Number)" />
        <span asp-validation-for="Number" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserId" class="control-label">Vali kasutaja</label>
        <select asp-for="UserId" class="form-control" asp-items="Model.Users"></select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Users" value=" ">

    <div class="form-group">
        <input type="submit" value="Lisa" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Cars">Tagasi</a>
